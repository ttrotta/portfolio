{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.gitattributes": true,
    "**/.gitignore": true,

    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/pnpm-workspace.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,

    "**/.prettierrc": true,
    "**/.prettierignore": true,
    "**/eslint.config.mjs": true,

    "**/next.config.ts": true,
    "**/next-env.d.ts": true,
    "**/tsconfig.json": true,
    "**/postcss.config.mjs": true,
    "**/tailwind.config.ts": true,

    ".next": true
  },
  "search.exclude": {
    // "**/node_modules": true,
  }
}
